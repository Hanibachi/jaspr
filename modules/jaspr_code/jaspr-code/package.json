{
  "name": "jaspr-code",
  "displayName": "Jaspr",
  "description": "Jaspr framework support for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "jaspr",
        "languages": [
          "dart"
        ],
        "label": "Jaspr",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "args": {
                "type": "array",
                "description": "Arguments to pass to 'jaspr serve'",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Jaspr Serve",
            "description": "A new configuration for serving a jaspr app.",
            "body": {
              "name": "Jaspr Serve",
              "request": "launch",
              "type": "jaspr"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "extensionDependencies": [
    "Dart-Code.dart-code"
  ],
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}