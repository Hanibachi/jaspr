{
  "name": "jaspr-code",
  "displayName": "Jaspr",
  "description": "Jaspr framework support for Visual Studio Code",
  "version": "0.1.0",
  "preview": true,
  "publisher": "schultek",
  "author": {
    "name": "Kilian Schulte"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Debuggers",
    "Snippets"
  ],
  "keywords": [
    "jaspr",
    "dart",
    "flutter"
  ],
  "icon": "media/jaspr.png",
  "activationEvents": [
    "workspaceContains:pubspec.yaml",
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "jaspr",
        "languages": [
          "dart"
        ],
        "label": "Jaspr",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "args": {
                "type": "array",
                "description": "Arguments to pass to 'jaspr serve'",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Jaspr",
            "description": "A new configuration for launching a Jaspr app.",
            "body": {
              "name": "Jaspr",
              "request": "launch",
              "type": "jaspr"
            }
          }
        ]
      }
    ],
    "snippets": [
      {
        "language": "dart",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "extensionDependencies": [
    "Dart-Code.dart-code"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "chalk": "^5.4.1"
  }
}
